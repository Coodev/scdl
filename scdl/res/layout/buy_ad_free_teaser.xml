<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:columnCount="1"
    android:useDefaultMargins="true" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="What You Get"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="105dp"
        android:layout_height="140dp"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="2"
        android:src="@drawable/icon_web" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="- You won&apos;t see any ads in the app.
        
- Reinstall the app from your Google account on any device without ads.

- Get the developer a coffee to work on cool new stuff.

- A warm, fuzzy feeling." />

    <Space
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="100dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Button
        android:id="@+id/button1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="4"
        android:text="Buy Now" />

    <Space
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_column="0"
        android:layout_row="3" />

</GridLayout>